<Window x:Class="Daily_TRAIN.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Daily TRAIN" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#FF4B79A1" Offset="0"/>
                <GradientStop Color="#FF28313B" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Height="332" Width="488">
            <TextBlock Text="Entrenamientos Semanales" FontSize="35" FontWeight="Bold" Foreground="White" TextAlignment="Center" Margin="0,0,0,20" Height="63" />
            <UniformGrid Rows="2" Columns="2" RenderTransformOrigin="0.496,0.502" Height="182">
                <Button Content="Pecho" Background="#FF2C3E50" Foreground="White" FontSize="18" Margin="10" Click="Button_Click" />
                <Button Content="Espalda" Background="#FF2C3E50" Foreground="White" FontSize="18" Margin="10" Click="Button_Click" />
                <Button Content="Brazo" Background="#FF2C3E50" Foreground="White" FontSize="18" Margin="10" Click="Button_Click" />
                <Button Content="Pierna" Background="#FF2C3E50" Foreground="White" FontSize="18" Margin="10" Click="Button_Click"  />
            </UniformGrid>
        </StackPanel>
    </Grid>
</Window>

